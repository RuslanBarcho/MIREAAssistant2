<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/item_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="09:00"
            android:textColor="#555555"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/item_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_begin_time"
            android:layout_alignStart="@+id/item_begin_time"
            android:layout_marginBottom="16dp"
            android:text="10:30"
            android:textColor="#555555"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/item_class"
            android:layout_toRightOf="@+id/item_begin_time"
            android:text="Large Text"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/black_bubble"
            android:paddingLeft="9dp"
            android:paddingTop="2dp"
            android:paddingRight="9dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/item_class"
            android:layout_toRightOf="@+id/item_begin_time"
            android:gravity="top"
            android:text="Small Text"
            android:textColor="@color/colorTextAddiction"
            android:textSize="15sp"
            android:visibility="visible" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
