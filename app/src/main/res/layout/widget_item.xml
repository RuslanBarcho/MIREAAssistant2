<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/item_widget_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="09:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#555555"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/item_widget_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_widget_begin_time"
            android:layout_below="@+id/item_widget_begin_time"
            android:layout_marginBottom="6dp"
            android:text="10:30"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#555555"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/item_widget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/item_widget_class"
            android:layout_toRightOf="@+id/item_widget_begin_time"
            android:text="Large Text"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_widget_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/black_bubble"
            android:paddingBottom="2dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="2dp"
            android:text="А-410"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_widget_professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_widget_name"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/item_widget_class"
            android:layout_toRightOf="@+id/item_widget_begin_time"
            android:gravity="top"
            android:text="Small Text"
            android:textColor="@color/colorTextAddiction"
            android:textSize="15sp"
            android:visibility="visible" />
    </RelativeLayout>